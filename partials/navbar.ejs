    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'dark-blue': '#151829',
                        'card-bg': '#1f2233',
                        'purple': '#7e5bef',
                        'green': '#4ade80',
                        'input-bg': '#1a1d2d',
                    },
                    keyframes: {
                        shimmer: {
                            '100%': {
                                transform: 'translateX(100%)'
                            },
                        },
                    },
                    animation: {
                        shimmer: 'shimmer 1.5s infinite',
                    },
                    fontFamily: {
                        sans: ['Nunito', 'sans-serif'],
                    },
                }
            }
        }
    </script>
</head>

